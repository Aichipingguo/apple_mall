<div>
    <h1 class="logo-name">苹果购</h1>
</div>
<h3>苹果小店登陆</h3>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.text_field :login,  class: 'form-control', placeholder: '用户名' %>
    </div>
    <div class="form-group">
      <%= f.text_field :password,  class: 'form-control', placeholder: '密码' , onpaste: 'return false', oncontextmenu: 'return false'%>
    </div>
    <%= f.submit "登录" , class: 'btn btn-primary block full-width m-b' %>
    <p class="text-muted text-center">
      <a href="login.html#">
        <small>忘记密码了？</small>
      </a> |
      <%= link_to '注册一个新账号' , new_user_registration_path%>
    </p>
  <%end%>
  <% content_for :js do %>
    <script>if(window.top !== window.self){ window.top.location = window.location;}</script>
  <%end%>