  <div>
    <h1 class="logo-name">苹果购</h1>
  </div>
  <h3>欢迎注册</h3>
  <p>创建一个苹果小店新账户</p>
  <%=simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email,  :class=> 'form-control',  :placeholder=> "请输入邮箱"%>
    </div>
    <div class="form-group">
      <%= f.text_field :login,  :class=> 'form-control',  :placeholder=> "请输入用户名"%>
    </div>
    <div class="form-group">
      <%= f.text_field :password,  :class=> 'form-control',  :placeholder=> "请输入密码"%>
    </div>
    <div class="form-group">
      <%= f.text_field :password_confirmation,  :class=> 'form-control',  :placeholder=> "请输入密码"%>
    </div>
<!--     <div class="form-group text-left">
      <div class="checkbox i-checks">
        <label class="no-padding">
        <input type="checkbox"><i></i> 我同意注册协议</label>
      </div>
    </div> -->
    <%= f.submit "注 册", :class=> 'btn btn-primary block full-width m-b' %>
      <p class="text-muted text-center">
        <small>已经有账户了？</small>
        <%=link_to  '点此登录' , new_user_session_path%>
      </p>
  <%end%>
  <% content_for :js do %>
    <script>
      $(document).ready(function(){$(".i-checks").iCheck({checkboxClass:"icheckbox_square-green",radioClass:"iradio_square-green",})});
    </script>
  <%end%>

